
@if (User.Identity.IsAuthenticated)
{
    <div class="leave-comment-form mt-5" id="reply">
        <h4 class="side-title mb-2">Bir yorum bırakın</h4>
        <p class="mb-4">
            İşaretli alanları doldurmanız gerekmektedir.
        </p>
        <form method="post" asp-action="AddComment" asp-controller="Comment">
            <div class="form-group">
                <div class="form-group" style="width:80%">
                    <textarea name="CommentContent" class="form-control" placeholder="Yorumunuz*" required=""
                              spellcheck="false"></textarea>
                </div>
            </div>
            <div class="form-group col-lg-6">
                <input type="hidden" name="DestinationID" value="@ViewBag.destID"> @* id değerini DestinationController dan alıyor. *@
                <input type="hidden" name="AppUserId" value="@ViewBag.userid"> @* id değerini DestinationController dan alıyor. *@
            </div>
            <div class="submit text-right">
                <button class="btn btn-style btn-primary" style="margin-right:170px">Yorum Yap </button>
            </div>
        </form>
    </div>
}
else
{
    <h3>Yorum yapabilmek için sisteme üye olmanız gerekmektedir.</h3>
}
