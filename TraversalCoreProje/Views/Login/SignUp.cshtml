@model TraversalCoreProje.Models.UserRegisterViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="zxx">
<head>
	<title>Invent Signup Form Responsive Widget Template | Home :: W3layouts</title>
	<!-- Meta tag Keywords -->
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta charset="UTF-8" />
	<meta name="keywords"
		  content="Invent Signup Form Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template, Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
	<script>
		addEventListener("load", function () {
			setTimeout(hideURLbar, 0);
		}, false);

		function hideURLbar() {
			window.scrollTo(0, 1);
		}
	</script>
	<link rel="stylesheet" href="~/web/css/style.css" type="text/css" media="all" />
	<style>
		span{
			color:red;
		}
	</style>
</head>
<body>
	<section class="w3l-login-6">
		<div class="login-hny">
			<div class="form-content">
				<div class="form-right">
					<div class="overlay">
						<div class="grid-info-form">
							<h5>Traversal Rezervasyon</h5>
							<h3>Hesap Oluşturun </h3>
							<p>
								Birbirinden deneyimli rehberlerimiz eşliğinde İskandinav ülkelerinin soğuğunu, Akdeniz ülkelerinin sıcaklığını, güzel ülkemizin Kapadokya'dan Sürmene'ye, Ölüdeniz'den Asos'a, Balkan Turundan Mısır Çöllerine kadar aklınıza gelen her yere bir tık uzaktayız. Seyahatlerimize katılmak için hemen kayıt olun...
							</p>
							<a href="index.html" class="read-more-1 btn">Haydi başlayalım..!</a>
						</div>
					</div>
				</div>
				<div class="form-left">
					<div class="middle">
						<h4>Bize Katılın</h4>
						<p>Hemen ücretsiz hesap oluşturun :)</p>
					</div>
					<form action="#" method="post" class="signin-form">
						<div class="form-input">
							<label>Adınız</label>
							<input type="text" asp-for="Name" />
							<span asp-validation-for="Name" ></span>
						</div>
						<div class="form-input">
							<label>Soyadınız</label>
							<input type="text" asp-for="Surname" />
							<span asp-validation-for="Surname" ></span>
						</div>
						<div class="form-input">
							<label>Kullanıcı Adınız</label>
							<input type="text" asp-for="Username" />
							<span asp-validation-for="Username" ></span>
						</div>
						<div class="form-input">
							<label>Mail Adresiniz</label>
							<input type="email" asp-for="Mail" />
							<span asp-validation-for="Mail" ></span>
						</div>
						<div class="form-input">
							<label>Şifreniz</label>
							<input type="password" asp-for="Password"  />
							<span asp-validation-for="Password"></span>
						</div>
						<div class="form-input">
							<label>Şifreniz Tekrar</label>
							<input type="password" asp-for="ConfirmPassword" />
							<span asp-validation-for="ConfirmPassword" ></span>
						</div>
						<div asp-validation-summary="ModelOnly" style="color:lightseagreen; margin-bottom:20px; font-weight:bold"></div>

						<label class="container">
							Şartları okudum &nbsp;<a href="#">Kabul ediyorum</a>
							<input type="checkbox">
							<span class="checkmark"></span>
						</label>
						<button class="btn">Create account</button>
					</form>
					<div class="copy-right text-center">
						<p>
							© @DateTime.Now.Year Tüm hakları saklıdır | Design by
							<a href="http://w3layouts.com/" target="_blank">W3layouts</a>
						</p>
					</div>
				</div>
			</div>
		</div>
	</section>
</body>
</html>