@model TraversalCoreProje.Areas.Admin.Models.VisitorViewModel
@{
    ViewData["Title"] = "UpdateVisitor";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>Api ile Ziyaretçi Güncelleme</h3>
<br>
<form method="post">
    <input type="hidden" asp-for="VisitorID"/>
    <div class="form-group mb-3">
        <label>Ziyaretçi Adı</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <label>Ziyaretçi Soyadı</label>
        <input type="text" asp-for="Surname" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <label>Ziyaretçi Mail Adresi</label>
        <input type="text" asp-for="Mail" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <label>Ziyaretçi Şehri</label>
        <input type="text" asp-for="City" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <label>Ziyaretçi Ülkesi</label>
        <input type="text" asp-for="Country" class="form-control" />
    </div>
    <button class="btn btn-outline-success">Ziyaretçiyi Kaydet</button>
</form>
