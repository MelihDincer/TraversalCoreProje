@model List<VisitorViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3 class="mt-3">Api Ziyaretçi Listesi</h3>
<div class="table-responsive text-nowrap">
    <table class="table card-table mt-4">
        <thead>
            <tr>
                <th>#</th>
                <th>Ad</th>
                <th>Soyad</th>
                <th>Şehir</th>
                <th>Ülke</th>
                <th>Mail</th>
                <th>İşlem</th>
            </tr>
        </thead>
        <tbody class="table-border-bottom-0">
            @foreach (var item in Model)
            {
                <tr>
                    <td><small>@item.VisitorID</small></td>
                    <td><small>@item.Name</small></td>
                    <td><small>@item.Surname</small></td>
                    <td><small>@item.City</small></td>
                    <td><small>@item.Country</small></td>
                    <td><small>@item.Mail</small></td>
                    <td>
                        <div class="dropdown">
                            <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                <i class="bx bx-dots-vertical-rounded"></i>
                            </button>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="/Admin/VisitorApi/UpdateVisitor/@item.VisitorID/"><i class="bx bx-edit-alt me-1"></i> <small>Düzenle</small></a>
                                <a class="dropdown-item" href="/Admin/VisitorApi/DeleteVisitor/@item.VisitorID" onclick="return confirm('Bu ziyaretçi kaydını silmek isteğinize emin misiniz?')"><i class="bx bx-trash me-1"></i> <small>Sil</small></a>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/Admin/VisitorApi/AddVisitor/" class="btn btn-sm btn-outline-info">Yeni Ziyaretçi Girişi</a>
</div>

