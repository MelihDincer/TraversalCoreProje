@model List<GetAllGuideQueryResult>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}


<h3 class="mt-3">CQRS MediatR Rehber Listesi</h3>
<br />
<div class="table-responsive text-nowrap">
    <table class="table card-table mt-4">
        <thead>
            <tr>
                <th>#</th>
                <th>Görsel</th>
                <th>Rehber Adı</th>
                <th>Açıklama</th>
                <th>Düzen</th>
            </tr>
        </thead>
        <tbody class="table-border-bottom-0">
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <th><small>@count</small></th>
                    <td><small><img src="@item.Image" height="50" width="50" /></small></td>
                    <td><small>@item.Name</small></td>
                    <td><small>@item.Description</small></td>
                    <td>
                        <div class="dropdown">
                            <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                <i class="bx bx-dots-vertical-rounded"></i>
                            </button>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="/Admin/GuideMediatR/GetGuides/@item.GuideID"><i class="bx bx-edit-alt me-1"></i> <small>Düzenle</small></a>
                                <a class="dropdown-item" href="/Admin/GuideMediatR/DeleteGuide/@item.GuideID" onclick="return confirm('Bu veriyi silmek isteğinize emin misiniz?')"><i class="bx bx-trash me-1"></i> <small>Sil</small></a>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/Admin/GuideMediatR/AddGuide/" class="btn btn-sm btn-info">Yeni Tur Rotası Girişi</a>
</div>