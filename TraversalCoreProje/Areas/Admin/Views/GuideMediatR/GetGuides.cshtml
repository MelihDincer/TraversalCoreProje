@model GetGuideByIDQueryResult
@{
    ViewData["Title"] = "GetGuides";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>Rehber Bilgi Düzenleme Sayfası</h3>
<br>
<form method="post">
    <input type="hidden" asp-for="GuideID" />
    <div class="form-group mb-3">
        <label>Rehber Adı</label>
        <input type="text" class="form-control" asp-for="Name" />
    </div>
    <div class="form-group mb-3">
        <label>Rehber Açıklaması</label>
        <input type="text" class="form-control" asp-for="Description" />
    </div>
    <button class="btn btn-outline-primary">Bilgileri Güncelle</button>
</form>

