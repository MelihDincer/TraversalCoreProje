@model List<AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
    string roleclass = "";
}

<h3 class="mt-3">Rol Listesi</h3>
<div class="table-responsive text-nowrap">
    @if (Model.Count > 0)
    {
        <table class="table card-table mt-4">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Rol Adı</th>
                    <th>Rolü Sil</th>
                    <th>Rolü Güncelle</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">

                @foreach (var item in Model)
                {
                    if (item.Name == "Admin")
                    {
                        roleclass = "badge bg-label-info me-1";
                    }
                    if (item.Name == "Member")
                    {
                        roleclass = "badge bg-label-success me-1";
                    }
                    if (item.Name == "Manager")
                    {
                        roleclass = "badge bg-label-primary me-1";
                    }
                    if (item.Name == "Visitor")
                    {
                        roleclass = "badge bg-label-dark text-dark me-1";
                    }
                    if (item.Name == "Editor")
                    {
                        roleclass = "badge bg-label-warning me-1";
                    }
                    count++;
                    <tr>
                        <td><small>@count</small></td>
                        <td><span class="@roleclass"><small>@item.Name</small></span></td>
                        <td><a href="/Admin/Role/DeleteRole/@item.Id" class="btn btn-sm btn-outline-danger" onclick="return confirm('Bu rolü gerçekten silmek istiyor musunuz?')"><i class="bx bx-trash me-1"></i> <small>Sil</small></a></td>
                        <td><a href="/Admin/Role/UpdateRole/@item.Id" class="btn btn-sm btn-outline-success"><i class="bx bx-edit-alt me-1"></i><small>Düzenle</small></a></td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-danger">
            <h4>Herhangi bir rol bulunamadı.</h4>
        </div>
    }
    <a href="/Admin/Role/CreateRole/" class="btn btn-sm btn-outline-primary">Yeni Rol Girişi</a>
</div>