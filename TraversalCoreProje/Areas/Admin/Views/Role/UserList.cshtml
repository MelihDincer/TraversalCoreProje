@model List<AppUser>
@{
    ViewData["Title"] = "UserList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3 class="mt-3">KullanıcıListesi</h3>
<div class="table-responsive text-nowrap">
    @if (Model.Count > 0)
    {
        <table class="table card-table mt-4">
            <thead>
                <tr>
                    <th>Kullanıcı Adı</th>
                    <th>Rol Ata</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">

                @foreach (var item in Model)
                {
                    <tr>
                        <td><small>@item.UserName</small></td>
                        <td><a href="/Admin/Role/AssignRole/@item.Id" class="btn btn-sm btn-outline-success"><i class="bx bx-edit-alt me-1"></i><small>Rol Ata</small></a></td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-danger">
            <h4>Herhangi bir rol bulunamadı.</h4>
        </div>
    }
    <a href="/Admin/Role/CreateRole/" class="btn btn-sm btn-outline-primary">Yeni Rol Girişi</a>
</div>

