@model UpdateRoleViewModel
@{
    ViewData["Title"] = "UpdateRole";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>Rol Düzenleme Sayfası</h3>
<br>
<form method="post">
    <div class="form-group mb-3">
        <input type="hidden" asp-for="RoleID" class="form-control" />
        <label>Rol Adı</label>
        <input type="text" asp-for="RoleName" class="form-control" />
    </div>
    <button class="btn btn-success">Güncelle</button>
</form>

