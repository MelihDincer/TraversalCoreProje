﻿
@model List<ApiMovieViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3 class="mt-3">Api IMDB Top 100 Film Listesi</h3>
<div class="table-responsive text-nowrap">
    <table class="table card-table mt-4">
        <thead>
            <tr>
                <th>#</th>
                <th>Film Adı</th>
                <th>Imdb Puanı</th>
                <th>Yapım Yılı</th>
                <th>Fragman</th>
            </tr>
        </thead>
        <tbody class="table-border-bottom-0">
            @foreach (var item in Model)
            {
                <tr>
                    <td><small>@item.rank</small></td>
                    <td><small>@item.title</small></td>
                    <td><small>@item.rating</small></td>
                    <td><small>@item.year</small></td>
                    <td><a href="#" class="btn btn-sm btn-outline-dark">Fragman</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>

