@model DTOLayer.DTOs.AnnouncementDTOs.AnnouncementAddDto
@{
    ViewData["Title"] = "AddAnnouncement";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>Yeni Duyuru Ekleme Sayfası</h3>
<br>
<form method="post">
    <div class="form-group mb-3">
        <label>Duyuru Başlığı</label>
        <input type="text" asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label>Duyuru İçeriği</label>
        <input type="text" asp-for="Content" class="form-control" />
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <button class="btn btn-outline-success">Oluştur</button>
</form>

