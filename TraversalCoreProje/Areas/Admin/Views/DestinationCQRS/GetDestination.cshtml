﻿
@model GetDestinationByIDQueryResult

@{
    ViewData["Title"] = "GetDestination";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>Lokasyon Düzenleme Sayfası</h3>
<br>
<form method="post">
    <input type="hidden" asp-for="DestinationID" />
    <div class="form-group mb-3">
        <label>Şehir Adı</label>
        <input type="text" asp-for="City" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <label>Gün-Gece Sayısı</label>
        <input type="text" asp-for="DayNight" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <label>Fiyat</label>
        <input type="text" asp-for="Price" class="form-control" />
    </div>
    <button class="btn btn-success">Lokasyon Bilgilerini Güncelle</button>
</form>

