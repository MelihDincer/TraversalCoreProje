@model CreateDestinationCommand
@{
    ViewData["Title"] = "AddDestination";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>Yeni Tur Rotası Ekleme Sayfası</h3>
<br>
<form method="post">
    <div class="form-group mb-3">
        <label>Şehir Adı</label>
        <input type="text" asp-for="City" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <label>Gün-Gece Sayısı</label>
        <input type="text" asp-for="DayNight" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <label>Fiyat</label>
        <input type="text" asp-for="Price" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <label>Kapasite</label>
        <input type="text" asp-for="Capacity" class="form-control" />
    </div>
    <button class="btn btn-success">Tur Rotasını Kaydet</button>
</form>

